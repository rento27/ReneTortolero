rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Expedientes: Locked if status is 'Timbrado'
    match /expedientes/{expedienteId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if (resource.data.status != 'Timbrado' || isAdmin());
      allow delete: if isAdmin();
    }

    // Facturas: Immutable once created, generally
    match /facturas/{facturaId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Created by backend preferably
      allow update: if false; // Inmutable fiscal record
    }

    // Clientes
    match /clientes/{clienteId} {
      allow read, write: if request.auth != null;
    }
  }
}
