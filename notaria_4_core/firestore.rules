rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check admin role (placeholder)
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Clients Collection
    match /clients/{rfc} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Expedientes Collection (Deeds)
    match /expedientes/{expedienteId} {
      allow read: if request.auth != null;
      // "Digital Lock": Prevent updates if status is "Timbrado"
      allow update: if (resource.data.status != 'Timbrado' || isAdmin());
      allow create: if request.auth != null;
    }

    // Facturas Collection (Invoices)
    match /facturas/{facturaId} {
      allow read: if request.auth != null;
      // Facturas are generally immutable once created by the system, except by admin
      allow write: if isAdmin();
    }

    // Catalogos SAT (Read-only for users)
    match /catalogos_sat/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
